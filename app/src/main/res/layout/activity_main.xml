<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_net_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载网络图片" />

    <Button
        android:id="@+id/btn_local_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载本地图片" />

    <Button
        android:id="@+id/btn_glide_local_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="glide加载本地图片" />

    <Button
        android:id="@+id/btn_glide_net_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="glide加载网络图片" />

    <Button
        android:id="@+id/btn_images_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片选择器" />

    <Button
        android:id="@+id/btn_dbutils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据库DbUtils" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_recyclerview_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="recyclerview_list" />

        <Button
            android:id="@+id/btn_recyclerview_grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="recyclerview_grid" />

        <Button
            android:id="@+id/btn_recyclerview_pubu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="recyclerview_瀑布流0  " />
    </LinearLayout>

    <Button
        android:id="@+id/btn_retrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit2" />

    <Button
        android:id="@+id/btn_activity_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity进入方式" />
</LinearLayout>
